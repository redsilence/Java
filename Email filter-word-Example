
public class Word {

	String name;
	int number=1;
	int numInHam=0;   //the amount of this word in class ham
	int numInSpam=0;  //
	String type;
	double pHam=0D;
	double pSpam=0D;
	
	
	public double getPHam()
	{
		return pHam;
	}
	public void setPHam(double ham)
	{
		pHam = ham;
	}
	public double getPSpam()
	{
		return pSpam;
	}
	public void setPSpam(double spam)
	{
		pSpam = spam;
	}
	public String getType()
	{
		return type;
	}
	public void setType(String type)
	{
		this.type = type;
	}
	public String getName()
	{
		return name;
	}
	public void setName(String name)
	{
		this.name = name;
	}
	public int getNumber()
	{
		return number;
	}
	public void setNumber(int number)
	{
		this.number = number;
	}
	
	
}
